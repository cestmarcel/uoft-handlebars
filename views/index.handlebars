<style>
    body {
        background-color: #2C4251;
        font-family: 'Rubik', sans-serif;
    }

    h1 {
        color: #FF784F;
        font-weight: bold;
    }

    p {
        color: white;
    }

    .btn-primary {
        background-color: #FF784F;
        border-color: #FF784F;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2C4251;
        border-color: #2C4251;
        color: white;
    }

    .alert-primary {
        background-color: white;
        color: #FF784F;
        border-radius: 0%;
        border-color: white;
    }

    footer {
        position: fixed;
        bottom: 15px;
        left: 0px;
        height: 30px;
        width: 100%;
        opacity: 0.6;
    }

    a {
        color: #FF784F;
        text-decoration: none;
    }
</style>

<img class="mx-auto mt-5 mb-5" style="width: 15%; display: block;" src="/img/burger.png" alt="Burger!" />
<h1 class="text-center">Eat-da-Burger!</h1>

<ul class="container">
    {{#each burgers}}
    <li>
        <p>{{name}}</p>
    </li>
    {{/each}}
</ul>

<form class="text-center" onsubmit="submitBurger(event)">
    <div class="form-group mt-3 mb-3">
        <textarea class="form-control mx-auto" id="burgerInput" rows="3" style="max-width: 30%;"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<p class="mt-3 mb-5 text-center">Enter a burger you'd like to eat, then click "Submit".</p>

<footer>
    <section class="alert alert-primary" role="alert">
        Built by Marcel Thiemann in Toronto &copy; 2020 | Icons by <u><a href="https://www.flaticon.com/authors/wanicon" target="_blank">wanicon</a></u> from <u><a href="https://www.flaticon.com/" target="_blank">flaticon.com</a></u>
    </section>
</footer>

<script>
    function submitBurger(event){
        event.preventDefault();
        axios.post('/burgers', {
            name: document.getElementById("burgerInput").value
        })
        .then(function (response) {
            window.location.reload();
        })
        .catch(function (error) {
            console.log(error);
        });
    }
</script>